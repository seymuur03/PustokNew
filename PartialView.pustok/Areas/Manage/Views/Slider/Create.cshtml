@model Slider
<div class="container">
    <div class="row justify-content-center">
        <form method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Photo"></label>
                <input asp-for="Photo" class="form-control">
                <img style="width:150px;height=100px" id="ShowImg" src="" alt="" />
                <span class="text-danger" asp-validation-for="Photo"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control">
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>

            <div class="form-group">
                <label asp-for="Desc"></label>
                <input asp-for="Desc" class="form-control">
                <span class="text-danger" asp-validation-for="Desc"></span>
            </div>

            <div class="form-group">
                <label asp-for="ButtonLink"></label>
                <input asp-for="ButtonLink" class="form-control">
                <span class="text-danger" asp-validation-for="ButtonLink"></span>
            </div>

            <div class="form-group">
                <label asp-for="ButtonText"></label>
                <input asp-for="ButtonText" class="form-control">
                <span class="text-danger" asp-validation-for="ButtonText"></span>
            </div>

            <div class="form-group">
                <label asp-for="Order"></label>
                <input asp-for="Order" class="form-control">
                <span class="text-danger" asp-validation-for="Order"></span>
            </div>

            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section scripts {
    @Html.Partial("ValidationPartialView")
}
