	@model CheckoutVm

<section class="breadcrumb-section">
	<h2 class="sr-only">Site Breadcrumb</h2>
	<div class="container">
		<div class="breadcrumb-contents">
			<nav aria-label="breadcrumb">
				<ol class="breadcrumb">
					<li class="breadcrumb-item"><a href="index.html">Home</a></li>
					<li class="breadcrumb-item active">Checkout</li>
				</ol>
			</nav>
		</div>
	</div>
</section>
<main id="content" class="page-section inner-page-sec-padding-bottom space-db--20">
	<div class="container">
		<div class="row">
			<div class="col-12">
				<!-- Checkout Form s-->
				<div class="checkout-form">
					<div class="row row-40">
						<div class="col-12">
							<h1 class="quick-title">Checkout</h1>
							<!-- Slide Down Trigger  -->
					 
							<!-- Slide Down Blox ==> Login Box  -->
					
							
							
						</div>
						<div class="col-lg-7 mb--20">
							<!-- Billing Address -->
							<form method="post" id="cForm" class="mb-40">
								<h4 class="checkout-title">Billing Address</h4>
								<div class="row">
									<div class="col-12 mb--20">
										<label asp-for="@Model.OrderVm.Address"></label>
										<input asp-for="@Model.OrderVm.Address"  placeholder="Address line 1">
										<span class="text-danger" asp-validation-for="@Model.OrderVm.Address"></span>
									</div>

									<div class="col-12 mb--20">
										<label asp-for="@Model.OrderVm.ZipCode"></label>
										<input asp-for="@Model.OrderVm.ZipCode" placeholder="ZipCode line 1">
										<span class="text-danger" asp-validation-for="@Model.OrderVm.ZipCode"></span>
									</div>

									<div class="col-12 mb--20">
										<label asp-for="@Model.OrderVm.Town"></label>
										<input asp-for="@Model.OrderVm.Town" placeholder="Town line 1">
										<span class="text-danger" asp-validation-for="@Model.OrderVm.Town"></span>
									</div>

									<div class="col-12 mb--20">
										<label asp-for="@Model.OrderVm.City"></label>
										<input asp-for="@Model.OrderVm.City" placeholder="City line 1">
										<span class="text-danger" asp-validation-for="@Model.OrderVm.City"></span>
									</div>
									
								</div>
							</form>
						
						
						</div>
						<div class="col-lg-5">
							<div class="row">
								<!-- Cart Total -->
								<div class="col-12">
									<div class="checkout-cart-total">
										<h2 class="checkout-title">YOUR ORDER</h2>
										<h4>Product <span>Total</span></h4>
										<ul>
											@foreach (var item in Model.CheckoutItems)
											{
												<li>
													<span class="left">@item.Name X @item.Count</span> <span class="right">$(@item.Count*@item.Price)</span>
												</li>

											}
										</ul>
										<p>Sub Total <span>$@Model.TotalPrice</span></p>
										<p>Shipping Fee <span>$00.00</span></p>
										<h4>Grand Total <span>$@Model.TotalPrice</span></h4>
										<div class="method-notice mt--25">
											<article>
												<h3 class="d-none sr-only">blog-article</h3>
												Sorry, it seems that there are no available payment methods for
												your state. Please contact us if you
												require
												assistance
												or wish to make alternate arrangements.
											</article>
										</div>
										<div class="term-block">
											<input type="checkbox" id="accept_terms2">
											<label for="accept_terms2">
												I’ve read and accept the terms &
												conditions
											</label>
										</div>
										<button  type="submit" form="cForm" class="place-order w-100">Place order</button>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</main>