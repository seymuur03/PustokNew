@model List<Blog>


<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                    <li class="breadcrumb-item active">Blog</li>
                </ol>
            </nav>
        </div>
    </div>
</section>
<section class="inner-page-sec-padding-bottom space-db--30">
    <div class="container">
        <div class="row space-db-lg--60 space-db--30">

            @foreach (var blog in Model)
            {
                <div class="col-lg-4 col-md-6 mb-lg--60 mb--30">
                    <div class="blog-card card-style-grid">
                        <a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id" class="image d-block">
                            <img src="~/assets/image/others/@blog.ImageName" alt="">
                        </a>
                        <div class="card-content">
                            <h3 class="title"><a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id">@blog.Name</a></h3>
                            <p class="post-meta">
                                <span>@blog.CreatedDate </span>
                                <article>
                                    <h2 class="sr-only">
                                        Blog Article
                                    </h2>
                                    <p>
                                        @blog.Descripton




                                    </p>
                                    <a asp-action="detail" asp-controller="blog" asp-route-id="@blog.Id" class="blog-link">Read More</a>
                                </article>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
  </div>
